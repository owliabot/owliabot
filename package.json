{
  "name": "owliabot",
  "version": "0.2.0",
  "description": "Crypto-native AI agent for Telegram and Discord",
  "type": "module",
  "bin": {
    "owliabot": "dist/entry.js"
  },
  "files": [
    "dist",
    "persona",
    "skills",
    "workspace"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build && chmod +x dist/entry.js",
    "build": "tsc",
    "dev": "tsx watch src/entry.ts",
    "start": "node dist/entry.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "onboard:go": "bun ./scripts/onboard-go.mjs",
    "test:onboard:go:smoke": "bun ./scripts/smoke-onboard-go.mjs",
    "test:e2e:wallet": "vitest run src/e2e/wallet.test.ts",
    "test:e2e:wallet:docker": "docker compose -f docker-compose.e2e.yml up --build --abort-on-container-exit --exit-code-from test"
  },
  "dependencies": {
    "@grammyjs/auto-chat-action": "^0.1.1",
    "@mariozechner/pi-agent-core": "^0.52.9",
    "@mariozechner/pi-ai": "^0.52.9",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.1.0",
    "croner": "^8.1.2",
    "discord.js": "^14.16.0",
    "grammy": "^1.30.0",
    "ipaddr.js": "^2.3.0",
    "json5": "^2.2.3",
    "minimatch": "^10.1.2",
    "open": "^11.0.0",
    "tslog": "^4.9.0",
    "ulid": "^3.0.2",
    "update-notifier": "^7.3.1",
    "yaml": "^2.6.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.48",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.0",
    "eslint": "^9.17.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
